<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="macha.ui.MainController">

    <top>
        <HBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Host:"/>
            <TextField fx:id="hostField" prefWidth="170" promptText="127.0.0.1"/>
            <Label text="Port:"/>
            <TextField fx:id="portField" prefWidth="80" promptText="45455"/>

            <Button text="Start Host" onAction="#onStartHost"/>
            <Button text="Connect" onAction="#onConnect"/>
        </HBox>
    </top>

    <center>
        <ListView fx:id="messagesList"/>
    </center>

    <bottom>
        <HBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Type a message..."/>
            <Button text="Send" onAction="#onSend"/>
        </HBox>
    </bottom>

</BorderPane>
